{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false, // Allow implicit 'any' types
    "strictNullChecks": false, // Allow strict null checks
    "strictFunctionTypes": false, // Allow strict function types
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2015"
  }
}
